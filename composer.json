{
  "name": "tflori/verja",
  "description": "An validation tool for arrays filled by foreign input",
  "license": "MIT",
  "require": {
    "php": "^7.0 || ^8.0",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "*",
    "tflori/phpunit-printer": "*",
    "mockery/mockery": "^1.1",
    "squizlabs/php_codesniffer": "^3.5",
    "tflori/dependency-injector": "^2.2",
    "nesbot/carbon": "^2.53"
  },
  "autoload": {
    "psr-4": {
      "Verja\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Verja\\Test\\": "tests/"
    }
  },
  "scripts": {
    "code-style": "phpcs --standard=PSR2 src && phpcs --standard=PSR2 --ignore=Examples tests",
    "test": "phpunit",
    "coverage": "phpunit --coverage-text"
  }
}
